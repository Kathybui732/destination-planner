<div class="container">
  <p id="notice"><%= notice %></p>

  <h3>
    <%= @destination.name %>
  </h3>

  <p>
    <strong>Zip:</strong>
    <%= @destination.zip %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @destination.description %>
  </p>

  <%= image_tag(@destination.image_url) %>

  <div class="row">
    <h4>Forecast for <%= @destination.name %>:</h4>
    <p>Date: <%= @destination.forcast.forcast_date %> </p>
    <p>Current Temperature: <%= @destination.forcast.current_temperature %> </p>
    <p>Today's high: <%= @destination.forcast.min_temp %> </p>
    <p>Today's low: <%= @destination.forcast.max_temp %> </p>
    <p>Weather Summary: <%= @destination.forcast.description %> </p>
  </div>

  <div class="row">
    <%= link_to 'Edit', edit_destination_path(@destination) %> |
    <%= link_to 'Back', destinations_path %>
  </div>
</div>
